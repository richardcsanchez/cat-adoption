<% form_for(@user) do |f|%>

<%=f.label 'name'%> <br>
<%=f.text_field :name %> <br>

<%=f.label 'email'%> <br>
<%=f.text_field :email %> <br>

<%=f.label 'money'%> <br>
<%=f.text_field :money %> <br>

<%=f.label 'password'%> <br>
<%=f.password_field :password %> <br>

<%= f.label :admin, "Are you an Admin?" %>
<%= f.check_box :admin, class: "form-check-input" %><br>

<%= f.submit "Create User" %>
<%end%>
